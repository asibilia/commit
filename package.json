{
  "name": "@alecsibilia/commit",
  "description": "Interactive CLI tool for creating standardized commit messages with customizable types and scopes",
  "version": "1.0.4",
  "author": "Your Name <your.email@example.com>",
  "bin": {
    "commit": "./dist/index.js"
  },
  "dependencies": {
    "@clack/prompts": "0.11.0",
    "chalk": "^5.3.0",
    "commander": "^14.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@types/bun": "latest",
    "semantic-release": "^24.2.6",
    "typescript": "^5.7.3"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "bun",
    "cli",
    "commit",
    "conventional-commits",
    "git",
    "interactive",
    "typescript"
  ],
  "license": "MIT",
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "build": "mkdir -p dist && bun build --minify --sourcemap ./src/index.ts --outdir ./dist --target node",
    "build:dev": "mkdir -p dist && bun build ./src/index.ts --outdir ./dist --target node",
    "clean": "rm -rf dist",
    "commit": "bun run src/index.ts",
    "dev": "bun run src/index.ts",
    "prepublishOnly": "bun run clean && bun run build",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run",
    "test": "bun test"
  },
  "type": "module"
}
